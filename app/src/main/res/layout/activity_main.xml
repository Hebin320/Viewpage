<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hebin.viewpager.MainActivity">

    <com.hebin.viewpager.MyViewpager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

    <LinearLayout
        android:id="@+id/ll_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vp_main"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/vp_main"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:id="@+id/ll_point_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vp_main_1"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        />

</RelativeLayout>
